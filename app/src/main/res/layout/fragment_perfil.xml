<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/main_fondo_menu">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:background="@drawable/title_style"
        android:paddingTop="55dp"
        android:paddingBottom="10dp"
        android:text="@string/Perfil_title"
        android:textAlignment="center"
        android:textColor="@color/main_azulOscuro"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp"
        />

    <ImageView
        android:id="@+id/icon_menu"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:tint="@color/main_azulOscuro"
        tools:ignore="MissingConstraints" />

    <FrameLayout
        android:id="@+id/cajaperfil"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_itemsmenu"
        android:justificationMode="inter_word"
        android:padding="20dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="40dp"


        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:ignore="MissingConstraints">


        <FrameLayout
            android:layout_width="308dp"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/NombreUsuarioPerfil"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"

                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:gravity="center"
                android:text="UserName"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"

                />


            <TextView
                android:id="@+id/CorreoUsuarioPerfil"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginStart="20dp"
                android:textAlignment="textStart"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="20dp"
                android:drawableStart="@drawable/ic_mail"
                android:drawablePadding="10dp"

                android:drawableTint="@color/black"
                android:text="@string/CorreoUsuarioPerfil"
                android:textColor="@color/black"
                android:textSize="15sp"


                />

            <TextView
                android:id="@+id/TelefonoUsuarioPerfil"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="115dp"
                android:layout_marginEnd="20dp"
                android:drawableStart="@drawable/ic_phone"

                android:drawableTint="@color/black"
                android:text="0000000000"
                android:textAlignment="textStart"
                android:drawablePadding="10dp"
                android:textColor="@color/black"
                android:textSize="15sp"


                />

            <!--      INFO PROFESIONAL     -->

            <TextView
                android:id="@+id/TelefonoCasaUsuarioPerfil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="150dp"
                android:layout_marginEnd="20dp"
                android:drawableStart="@drawable/ic_phone"

                android:drawablePadding="10dp"
                android:drawableTint="@color/black"
                android:text="0000000000"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/info_profesional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="80dp"
                android:visibility="gone"
                >

                <TextView
                    android:id="@+id/text_especializacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="200dp"
                    android:layout_marginEnd="50dp"
                    android:text="@string/textEspecializacion"
                    android:textAlignment="textStart"
                    android:textColor="@color/main_grisclaro"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/EspecializacionPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="50dp"
                    android:drawableStart="@drawable/ic_especial"
                    android:textAlignment="textStart"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/black"
                    android:text="0000000000"

                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/text_workplace"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:text="@string/textLugartrabajo"
                    android:textAlignment="textStart"
                    android:textColor="@color/main_grisclaro"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/WorkplacePerfi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="50dp"
                    android:drawableStart="@drawable/ic_agregar"
                    android:textAlignment="textStart"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/black"
                    android:text="0000000000"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/text_Ubicacion"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:text="@string/textUbicacion"
                    android:textAlignment="textStart"
                    android:textColor="@color/main_grisclaro"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/UbicacionPerfi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="50dp"
                    android:drawableStart="@drawable/ic_location"
                    android:textAlignment="textStart"
                    android:drawablePadding="10dp"                    android:drawableTint="@color/black"
                    android:text="0000000000"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/text_Estudios"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:text="@string/textEstudios"
                    android:textAlignment="textStart"
                    android:textColor="@color/main_grisclaro"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/EstudiosPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="50dp"
                    android:drawableStart="@drawable/ic_estudios"
                    android:textAlignment="textStart"
                    android:drawablePadding="10dp"                    android:drawableTint="@color/black"
                    android:text="0000000000"
                    android:textColor="@color/black"
                    android:textSize="15sp" />


            </LinearLayout>

        </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/circlewhite_background"

        app:layout_constraintBottom_toTopOf="@id/cajaperfil"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <!--comentario-->


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginStart="5dp"
            app:srcCompat="@drawable/ic_usericon"
            app:tint="@color/main_grisclaro" />


    </LinearLayout>

    <Button
        android:id="@+id/Editar_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/transparent"
        android:minHeight="48dp"
        android:onClick="onClick"
        android:text="@string/EditarPerfil"
        android:textAllCaps="false"
        android:textColor="@color/main_grisclaro"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/Cerrar_sesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/transparent"

        android:minHeight="48dp"
        android:onClick="onClick"
        android:text="@string/CerrarSesionPerfil"
        android:textAllCaps="false"
        android:textColor="#F44336"
        app:layout_constraintTop_toBottomOf="@+id/cajaperfil"
        tools:ignore="TouchTargetSizeCheck"
        tools:layout_editor_absoluteX="149dp" />


</androidx.constraintlayout.widget.ConstraintLayout>